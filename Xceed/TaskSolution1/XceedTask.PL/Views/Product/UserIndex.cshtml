@using XceedTask.DAL.Models;
@model IEnumerable<Product>

@{
    ViewData["Title"] = "All Product";
}


<h2 class="text-white">All Product</h2>


@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>End Date</th>
                <th>Price</th>
                <th>Category</th>
                <th>Details</th>
        
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-white">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.EndDate</td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>  Details

                        </a>
                    </td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>
            There is no Department!!
        </h3>
    </div>
}
