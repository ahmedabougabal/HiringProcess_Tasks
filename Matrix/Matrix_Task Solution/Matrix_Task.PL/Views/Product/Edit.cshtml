@using MAtrixTask.DAL.Models
@model Product
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product </h1>
<br />
<br />

<form asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <div class="form-group mb-3">
        <label for="CategoryId" class="mainColor fw-bold">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.category" class="form-control"></select>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span class="text-danger" asp-validation-for="EndDate"></span>
    </div>


    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light"> Back To List </a>
</form>


